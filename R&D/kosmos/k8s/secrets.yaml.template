apiVersion: v1
kind: Secret
metadata:
  name: kosmos-secrets
  namespace: kosmos
type: Opaque
data:
  # IMPORTANT: Base64 encode your actual values before applying
  # Example: echo -n "sk-ant-your-key" | base64

  # Anthropic API key (REQUIRED)
  anthropic-api-key: <BASE64_ENCODED_API_KEY>

  # Database password
  postgres-password: <BASE64_ENCODED_PASSWORD>

  # Neo4j password
  neo4j-password: <BASE64_ENCODED_PASSWORD>

  # Optional: Email/Slack/PagerDuty credentials for alerts
  # smtp-password: <BASE64_ENCODED_PASSWORD>
  # slack-webhook-url: <BASE64_ENCODED_URL>
  # pagerduty-key: <BASE64_ENCODED_KEY>
